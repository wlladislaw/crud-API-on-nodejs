{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",

    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node", "jest"]
  },
  "include": ["src",  "tests/**/*"],
  "exclude": ["node_modules"]
}
